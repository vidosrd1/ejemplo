<div class="container">
  <h1>Lists</h1>
  <%= link_to 'New List', new_list_path %>
  <hr />
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th style="width:10px; heigh:auto"></th>
        <th>Body</th>
        <th style="width:10px; heigh:auto"></th>
        <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% @lists.each do |list| %>
       <tr style="padding:10px 20px 25px 0">
         <td><%= list.title %></td>
         <td style="width:30px; heigh:auto"></td>
         <td style="padding-top:10px; padding-right:0px; padding-bottom:20px; padding-left:0"><%= truncate(strip_tags(list.body.to_s), length: 80) %></td>          <td style="width:30px; heigh:auto"></td>
         <td><%= link_to 'Show', list %></td>
         <td style="width:7px; heigh:auto"></td>
         <td><%= link_to 'Edit', edit_list_path(list) %></td>
       </tr>
     <% end %>
    </tbody>
  </table>
  <br>
</div>
<hr />
<div class="container">
  <%= link_to 'New List', new_list_path %>
</div>
