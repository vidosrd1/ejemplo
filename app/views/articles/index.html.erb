<div class="container">
  <h1>Articles</h1>
  <div class="container" style="padding:10px 20px 25px 0">
    <%= link_to 'New Article', new_article_path %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th style="width:10px; heigh:auto"></th>
        <th>Body</th>
        <th style="width:10px; heigh:auto"></th>
        <th></th>
        <th style="width:10px; heigh:auto"></th>
        <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <% @articles.each do |article| %>
       <tr style="padding:10px 20px 25px 0">
         <td><%= article.title %>
       </td>
         <td style="width:30px; heigh:auto"></td>
         <td style="padding-top:10px; padding-right:0px; padding-bottom:20px; padding-left:0"><%= truncate(strip_tags(article.body.to_s), length: 80) %></td>          <td style="width:30px; heigh:auto"></td>
         <td style="width:85px;"><%= article.publish%></td>
         <td style="width:10px; heigh:auto"></td>
         <td><%= link_to 'Show', article %></td>
         <td style="width:7px; heigh:auto"></td>
         <td><%= link_to 'Edit', edit_article_path(article) %></td>
         <td style="width:7px; heigh:auto"></td>
         <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
    </tbody>
  </table>
  <br>
</div>
<div class="container">
  <%= link_to 'New Article', new_article_path %>
</div>
